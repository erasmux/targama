<main class="simple_form_style">
  <%= form_for @record do |f| %>
    <p>
      <%= f.label :word %>
      <%= f.text_field :word %>
    </p>
    <p>
      <%= f.label :word_inflection %>
      <%= f.text_field :word_inflection %>
    </p>
    <p>
      <%= f.label :gram_form_id %>
      <%= f.collection_select(:gram_form_id, GramForm.all, :id, :name, {prompt: ''})  %>
    </p>
    <p>
      <%= f.label :dialect_id %>
      <%= f.collection_select(:dialect_id, Dialect.all, :id, :name, {prompt: ''}) %>
    </p>
    <p>
      <%= f.label :additional_info %>
      <%= f.text_area :additional_info %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
</main>

<% if pending_errors? %>
  <div id="error_explanation">
    <h2><%= t(pending_errors.count==1 ? 'error' : 'errors',scope: :common).capitalize %>:</h2>
    <ul>
      <% pending_errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
