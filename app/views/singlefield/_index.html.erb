<div class="table_like">
  <% @records.each do |record| %>
    <div class="tr_like">
      <span class="td_like">
        <%= link_to 'x', record_path(record), method: :delete, class: "button_like",
              data: { confirm: "#{t('common.remove').capitalize} #{@klass.model_name.human} #{record.send(@fname)}?" } %>
      </span>
      <%= form_for record do |f| %>
        <span class="td_like"><%= f.text_field @fname %></span>
        <span class="td_like"><%= f.submit "v" %></span>
      <% end %>
    </div>
  <% end %>
  <div class="tr_like">
    <span class="td_like"></span>
    <%= form_for @new_record do |f| %>
      <span class="td_like"><%= f.text_field @fname %></span>
      <span class="td_like"><%= f.submit "+" %></span>
    <% end %>
  </div>
</div>

<% if @pending_errors.any? %>
  <div id="error_explanation">
    <h2><%= t(@pending_errors.count==1 ? 'error' : 'errors',scope: :common).capitalize %>:</h2>
    <ul>
      <% @pending_errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
